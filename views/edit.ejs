<%- include("partials/header") %>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <!-- BrandLogo -->
            <a class="navbar-brand"><i class="fa fa-cubes" style="font-size:40px;color:red"></i>BlogSite</a>
            <!-- Navbar-Toggler-Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- div, we want to collapse -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/blogs" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/blogs/new" class="nav-link">Create Post</a>
                    </li>
                </ul>
            </div>
    
    
        
    </nav>

<div class="container bg-warning mt-4 p-2" style="border:1px solid black;">
    <h1>Edit blog "<%= blog.title %>" </h1>

    <!-- Form -->
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="form-group mt-4 h-100 mx-auto">
            <div class="container bg-dark p-3" style="color:white;border-radius:12px;">
                <label>Title:</label>
                <input type="text" class="form-control m-3 mr-2 w-75" name="blog[title]" value="<%= blog.title %>" required>
            
            
                <label>Image:</label>
                <input type="text" class="form-control m-3 mr-2 w-75" name="blog[image]" value="<%= blog.image %>" required>
            
            
                <label>Blog Post:</label>
                <textarea required class="form-control m-3 mr-2 w-75" rows="8" name="blog[body]"><%= blog.body %></textarea>
            </div>
            <input type="submit" class="btn btn-primary m-2">
        </div>
    </form>
</div>



<%- include("partials/footer") %>