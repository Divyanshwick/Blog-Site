<%- include("partials/header") %>
<%- include("partials/navbar") %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">BlogSite</p>
                <div class="list-group">
                    <li class="list-group-item active">Category 1</li>
                    <li class="list-group-item">Category 2</li>
                    <li class="list-group-item">Category 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="image-responsive" style="border-radius: 12px;" src="<%= blog.image %>">
                    
                    <div class="caption-full">
                        <h4 class="pull-right">$9/hr</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-5 mb-5" style="display: flex;justify-content: center;align-items: center;">
        <div class="card text-center w-100">
            <div class="card-header"><%= blog.created.toDateString() %></div>
            <div class="card-body">
            <div class="container">
                
                <img class="image-responsive" style="border-radius: 12px;" src="<%= blog.image %>">
                <div class="card_heading">
                    <h5 class="card-title">Title : <%= blog.title %></h5>
                    <p>Written By : Colt Steel</p>
                </div>
                
                <p class="card-text mt-4" style="text-align: left;"><%= blog.body %></p>
            </div>
            <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
            </div>
            <div class="card-footer">
                <div class="btn-group">
                    <form>
                    <a href="/blogs" class="btn btn-outline-primary" >Back</a> 
                    </form>
                    <form>
                    <a href="/blogs/<%= blog._id %>/edit" class="btn btn-outline-warning ">Update</a>
                    </form>
                    <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-outline-danger">Delete</button>
                    </form>
                </div>
                <div class="comments">
                    <h1>COMMENTS</h1>&nbsp;&nbsp;<a href="/blogs/<%= blog._id %>/comments/new" class="btn btn-success">Add a Comment</a>
                      
                            <% var i = 0; %>
                            <div class="row" id="cmnt">
                                <% blog.comments.forEach(function(comment) { %>
                                    <% i+=1; %>
                                
                                    <div class="col-md-12" id="parent_cmnt">
                                        <div class="child_cmnt">
                                            <strong><%= comment.author %></strong>
                                            <span class="pull-right">10 days ago</span>
                                        </div>
                                        <p><%= comment.text %></p>
                                    </div>
                               
                                
                                <% }) %>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
 

<%- include("partials/footer") %>